<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
<style>
.checkout__input__checkbox {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10px 0;
    border-bottom: 1px solid #ddd;
}

.checkout__input__checkbox:last-child {
    border-bottom: none;
}

.checkout__input__checkbox input[type="radio"] {
    display: none;
}

.checkout__input__checkbox label {
    position: relative;
    flex: 1;
    margin-right: 15px;
    cursor: pointer;
    padding-left: 30px;
    font-size: 14px;
    color: #333;
}

.checkout__input__checkbox .checkmark {
    position: absolute;
    top: 0;
    left: 0;
    height: 20px;
    width: 20px;
    border: 2px solid #ccc;
    border-radius: 50%;
    background: #fff;
}

.checkout__input__checkbox input[type="radio"]:checked + .checkmark {
    border-color: black;
    background: black;
}

.checkout__input__checkbox .checkmark::after {
    content: "";
    position: absolute;
    top: 50%;
    left: 50%;
    width: 10px;
    height: 10px;
    background: #fff;
    border-radius: 50%;
    transform: translate(-50%, -50%);
    display: none;
}

.checkout__input__checkbox input[type="radio"]:checked + .checkmark::after {
    display: block;
}

.address-list {
    margin-top: 20px;
}

.btn-primary.mt-3 {
    margin-top: 15px;
}

.btn-secondary {
    white-space: nowrap;
}


#couponSelect {
    width: 100%;
    padding: 8px;
    margin-bottom: 10px;
    border: 1px solid #ddd;
    border-radius: 4px;
}

#applyCouponBtn {
    width: 100%;
    padding: 8px;
    background-color: #000;
    color: white;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    margin-bottom: 10px;
}

#applyCouponBtn:hover {
    background-color: #333;
}

#couponMessage {
    margin-top: 5px;
    color: #666;
    font-size: 14px;
}

</style>

