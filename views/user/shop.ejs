<%- include("../../views/partials/user/header") %>
<style>
   
  .shop {
      background-color: rgb(243, 242, 238); 
      padding: 20px 0;
  } 
  .product-content-wrap h6 {
      font-size: 18px;
      color: #333;
      margin-bottom: 5px;
  }

  .accordion ul li a {
    color: black; 
    text-decoration: none; 
}

  .accordion ul li a:hover {
    color: #555; 
}



  .product-content-wrap h5 {
      font-size: 16px;
      color: #ff6b6b;
      margin-bottom: 10px;
  }


  .product-content-wrap a {
      display: inline-block;
      padding: 8px 12px;
      background-color: #ff6b6b;
      color: white;
      text-transform: uppercase;
      font-size: 14px;
      border-radius: 4px;
      text-decoration: none;
  }


  .product-content-wrap a:hover {
      background-color: #ff4c4c;
  }

.pagination {
    display: flex;
    justify-content: center;
    margin-top: 20px;
}

.page-number {
    display: inline-block;
    width: 30px;
    height: 30px;
    line-height: 30px;
    border: 2px solid #080606;
    border-radius: 50%;
    text-align: center;
    margin: 0 5px;
    color: #030202;
    text-decoration: none;
}

.page-number.active {
    background-color: #080707;
    color: white;
}

.page-number:hover {
    background-color: #000000;
    color: white;
}

.card-title {
    font-size: 16px; 
    font-weight: bold; 
    color: #333; 
}



.product-card {
    position: relative;
    border: none;
    border-radius: 12px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    margin-bottom: 25px;
    background: white;
  }

  .product-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
  }

  .product-card .card-img-top {
    height: 200px;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .product-card:hover .card-img-top {
    transform: scale(1.05);
  }

  .wishlist-icon {
    position: absolute;
    top: 15px;
    right: 15px;
    background: white;
    border-radius: 50%;
    padding: 8px;
    cursor: pointer;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    z-index: 1;
    transition: transform 0.2s ease;
  }

  .wishlist-icon:hover {
    transform: scale(1.1);
  }

  .wishlist-icon svg {
    width: 20px;
    height: 20px;
    fill: none;
    stroke: #ff6b6b;
    stroke-width: 2;
    transition: fill 0.2s ease;
  }

  .wishlist-icon.active svg {
    fill: #ff6b6b;
  }

  .card-body {
    padding: 15px;
  }

  .card-title {
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: 8px;
    color: #2d3436;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    height: 2.4em;
  }

  .price {
    font-size: 1.25rem;
    font-weight: 700;
    color: #2d3436;
    margin-bottom: 8px;
  }

  .status {
    display: inline-block;
    padding: 4px 8px;
    border-radius: 4px;
    font-size: 0.75rem;
    font-weight: 500;
    text-transform: uppercase;
  }

  .status.in-stock {
    background-color: #deffde;
    color: #2d8a2d;
  }

  .status.out-of-stock {
    background-color: #ffe5e5;
    color: #cc0000;
  }


  .breadcrumb-option {
  padding-top: 10px; 
  padding-bottom: 10px; 
}

.breadcrumb__text h4 {
  margin-bottom: 5px; 
}

.breadcrumb__links {
  margin-top: 0; 
}

.breadcrumb__links a {
  font-size: 14px; 
}

.breadcrumb__links span {
  font-size: 14px; 
}




</style>
<section class="breadcrumb-option">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <div class="breadcrumb__text">
            <h4>Shop</h4>
            <div class="breadcrumb__links">
              <a href="/">Home</a>
              <span>Shop</span>
            </div>
          </div>
        </div>
      </div>
    </div>
 </section>

<section class="shop spad">
    <div class="container">
        <div class="row">
            
            <div class="col-lg-3 col-md-4">
                <div class="shop__sidebar">
                    <div class="shop__sidebar__search">
                        <form method="GET" action="/shop">
                            <input 
                                type="text" 
                                name="search" 
                                placeholder="Search products..." 
                                value="<%= searchQuery || '' %>"
                            />
                            <button type="submit"><i class="fa fa-search"></i></button>
                        </form>
                    </div>
                    
                    <div class="shop__sidebar__accordion">

                        <div class="accordion" id="brandAccordion">
                            <div class="card">
                                <div class="card-heading">
                                    <a href="#" data-toggle="collapse" data-target="#brandCollapse">Brand</a>
                                </div>
                                <div id="brandCollapse" class="collapse" data-parent="#brandAccordion">
                                    <div class="card-body">
                                        <ul>
                                            <% brands.forEach((brand) => { %>
                                                <li>
                                                    <a href="?brand=<%= brand._id %>&category=<%= selectedCategory %>&sortBy=<%= selectedSort %>">
                                                        <%= brand.brandName %>
                                                    </a>
                                                </li>
                                            <% }) %>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>

                        
                        <div class="accordion" id="categoryAccordion">
                            <div class="card">
                                <div class="card-heading">
                                    <a href="#" data-toggle="collapse" data-target="#categoryCollapse">Category</a>
                                </div>
                                <div id="categoryCollapse" class="collapse" data-parent="#categoryAccordion">
                                    <div class="card-body">
                                        <ul>
                                            <% categories.forEach((category) => { %>
                                                <li>
                                                    <a href="?category=<%= category._id %>&brand=<%= selectedBrand %>&sortBy=<%= selectedSort %>">
                                                        <%= category.name %>
                                                    </a>
                                                </li>
                                            <% }) %>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>

                        
                        <div class="accordion" id="sortAccordion">
                            <div class="card">
                                <div class="card-heading">
                                    <a href="#" data-toggle="collapse" data-target="#sortCollapse">Sort By</a>
                                </div>
                                <div id="sortCollapse" class="collapse" data-parent="#sortAccordion">
                                    <div class="card-body">
                                        <ul>
                                            <li>
                                                <!-- <a href="?sortBy=priceLowHigh&category=<%= selectedCategory %>&brand=<%= selectedBrand %>">Price Low to High</a> -->
                                                <a href="?sortBy=priceLowHigh&page=1">Sort by Price: Low to High</a> 
                                            </li>
                                            <li>
                                                <!-- <a href="?sortBy=priceHighLow&category=<%= selectedCategory %>&brand=<%= selectedBrand %>">Price High to Low</a> -->
                                                <a href="?sortBy=priceHighLow&page=1">Sort by Price: High to Low</a> 
                                            </li>
                                            <li>
                                                <!-- <a href="?sortBy=ratings&category=<%= selectedCategory %>&brand=<%= selectedBrand %>">Average Ratings</a> -->
                                                <a href="?sortBy=ratings&page=1">Sort by Ratings</a>
                                            </li>
                                            <li>
                                                <!-- <a href="?sortBy=aZ&category=<%= selectedCategory %>&brand=<%= selectedBrand %>">A-Z</a> -->
                                                <a href="?sortBy=aZ&page=1">Sort Alphabetically: A-Z</a>
                                            </li>
                                            <li>
                                                <!-- <a href="?sortBy=zA&category=<%= selectedCategory %>&brand=<%= selectedBrand %>">Z-A</a> -->
                                                <a href="?sortBy=zA&page=1">Sort Alphabetically: Z-A</a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

           
            <div class="col-lg-9 col-md-8">
                
                <div class="row">
                    <% products.forEach(product => { %>
                    <div class="col-lg-3 col-md-4 col-sm-6">
                        <div class="product-card">
                            <div class="wishlist-icon">
                               
   
                                <svg viewBox="0 0 24 24">
                                    <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"/>
                                </svg>
                            </div>
                            <a href="/productDetails?id=<%= product._id %>">
                                <img src="/uploads/re-images/<%= product.productImage[0] %>" class="card-img-top" alt="<%= product.productName %>" />
                                <div class="card-body">
                                    <h3 class="card-title"><%= product.productName %></h3>
                                    <p class="price">â‚¹<%= product.salePrice.toLocaleString('en-IN') %></p>
                                    <p class="status <%= product.status.toLowerCase().replace(' ', '-') %>"><%= product.status %></p>
                                </div>
                            </a>
                        </div>
                    </div>
                    <% }) %>
                </div>
            </div>
        </div>
    </div>

    <div class="pagination">
        <% for (let i = 1; i <= totalPages; i++) { %>
            <a href="?page=<%= i %>&category=<%= selectedCategory %>&brand=<%= selectedBrand %>&sortBy=<%= selectedSort %>" class="page-number <%= currentPage === i ? 'active' : '' %>">
                <%= i %>
            </a>
        <% } %>
    </div>

</section>

<script>
  

 
document.querySelectorAll('.wishlist-icon').forEach((icon, index) => {
  icon.addEventListener('click', async function (e) {
    e.preventDefault();
    e.stopPropagation();

    
    const productLink = this.closest('.product-card').querySelector('a').getAttribute('href');
    const urlParams = new URLSearchParams(productLink.split('?')[1]);
    const productId = urlParams.get('id'); 

    if (!productId) {
      alert("Product ID not found.");
      return;
    }

    try {
      const response = await fetch(`/wishlist/toggle?id=${productId}`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
      });

      const data = await response.json();

      if (response.ok) {
        this.classList.toggle('active');
        alert(data.message);
      } else {
        console.error(data.message);
        alert('Failed to update wishlist');
      }
    } catch (err) {
      console.error('Error:', err);
      alert('An error occurred while updating the wishlist.');
    }
  });
});


</script>

