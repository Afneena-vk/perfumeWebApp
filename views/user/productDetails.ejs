.imageZoom {
            width: 100%; 
            height: 700px;
            position: relative;
            overflow: hidden;
        }


 
.imageZoom img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            border-radius: 8px; 
        }


.imageZoom::after {
            display: var(--display);
            content: '';
            width: 200%; 
            height: 200%; 
            background-color: black;
            background-image: var(--url);
            background-size: 200%; 
            background-position: var(--zoom-x) var(--zoom-y);
            position: absolute;
            left: 0;
            top: 0;
            pointer-events: none;
        }

        .thumbnail-images {
            display: flex;
            margin-top: 10px;
        }

        .thumbnail-images img {
            width: 80px; 
            height: 80px; 
            margin-right: 5px;
            cursor: pointer;
            border-radius: 4px;
            transition: transform 0.2s;
        }

        .thumbnail-images img:hover {
            transform: scale(1.1); 
        }


.in-stock {
