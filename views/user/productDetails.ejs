<script>
     

document.querySelector("form").addEventListener("submit", async function (event) {
    event.preventDefault();
    
    const formData = new FormData(this);
    
    try {
        const response = await fetch("/add-to-cart", {
            method: "POST",
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({
                productId: formData.get("productId"),
                selectedSize: formData.get("selectedSize"),
                quantity: formData.get("quantity")
            })
        });
        
        const result = await response.json();
        
        if (response.ok) {
            // window.location.href = "/cart";
            Swal.fire({
                icon: "success",
                title: "Added to Cart",
                text: "The product has been added to your cart successfully!"
            });

        } else {
            Swal.fire({
                icon: "error",
                title: "Error",
                text: result.message
            });
        }
    } catch (error) {
        Swal.fire({
            icon: "error",
            title: "Error",
            text: "An unexpected error occurred"
        });
    }
});




    const imageZoomElements = document.querySelectorAll(".imageZoom");

    imageZoomElements.forEach((imageZoom) => {
        imageZoom.addEventListener("mousemove", (e) => {
            const rect = imageZoom.getBoundingClientRect();
            const x = ((e.clientX - rect.left) / rect.width) * 100;
            const y = ((e.clientY - rect.top) / rect.height) * 100;

            imageZoom.style.setProperty("--zoom-x", `${x}%`);
            imageZoom.style.setProperty("--zoom-y", `${y}%`);
            imageZoom.style.setProperty("--display", "block");
            imageZoom.style.setProperty("--url", `url('${imageZoom.querySelector("img").src}')`);
        });

        imageZoom.addEventListener("mouseleave", () => {
            imageZoom.style.setProperty("--display", "none");
        });
    });

    
    function updateStockStatus(radio) {
        const selectedQuantity = parseInt(radio.getAttribute('data-quantity'));
        const stockStatusElement = document.getElementById('stock-status');
        //const quantityInput = document.getElementById('quantityInput');

        // Update the stock status
        if (selectedQuantity > 0) {
            stockStatusElement.textContent = 'In Stock';
            stockStatusElement.classList.remove('out-of-stock');
            stockStatusElement.classList.add('in-stock');
            //quantityInput.max = selectedQuantity; // Set max quantity based on selected size
        } else {
            stockStatusElement.textContent = 'Out of Stock';
            stockStatusElement.classList.remove('in-stock');
            stockStatusElement.classList.add('out-of-stock');
            //quantityInput.max = 0; // Set max quantity to 0
        }

        // Set the selected size in the hidden input
        document.getElementById('selectedSize').value = radio.value;
    }
    
// Update the stock status function
function updatequantityStatus(radio) {
    const selectedSize = radio.value;
    const productId = "<%= product._id %>";

    // Make an AJAX request to fetch the stock quantity for the selected size
    fetch(`/product/${productId}/stock`, {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json'
        },
        body: JSON.stringify({
            size: selectedSize
        })
    })
    .then(response => response.json())
    .then(data => {
        const stockStatusElement = document.getElementById('stock-status');
        const stockQuantityElement = document.getElementById('stock-quantity');

        // Update the stock status and quantity
        if (data.quantity > 0) {
            stockStatusElement.textContent = 'In Stock';
            stockStatusElement.classList.remove('out-of-stock');
            stockStatusElement.classList.add('in-stock');
            stockQuantityElement.textContent = data.quantity;
        } else {
            stockStatusElement.textContent = 'Out of Stock';
            stockStatusElement.classList.remove('in-stock');
            stockStatusElement.classList.add('out-of-stock');
            stockQuantityElement.textContent = 'Out of Stock';
        }
    })
    .catch(error => console.error('Error fetching stock quantity:', error));
} 
   


</script>


      
