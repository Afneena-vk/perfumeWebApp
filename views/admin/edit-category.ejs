<%- include("../../views/partials/admin/header") %>

<main class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <h2 class="text-center mb-4">Edit Category</h2>
            <form method="post" action="/admin/editCategory/<%=category._id%>">
          
                <div class="mb-4">
                    <label for="categoryName" class="form-label">Name</label>
                    <input type="text" id="categoryName" name="categoryName" value="<%=category.name%>" class="form-control border" placeholder="Enter category name" >
                </div>

              
                <div class="mb-4">
                    <label for="description" class="form-label">Description</label>
                    <textarea id="description" name="description" class="form-control border" rows="4" placeholder="Enter description"><%=category.description%></textarea>
                </div>

                
                <div class="d-grid">
                    <button class="btn btn-primary btn-block" type="submit">Update Category</button>
                </div>
            </form>
        </div>
    </div>
</main>

<%- include("../../views/partials/admin/footer") %>
